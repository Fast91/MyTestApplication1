<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.faust.mytestapplication1.ActivityExpense"
    android:id="@+id/linearLayout_activityexpense"
    android:padding="4dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/activity_group_top"/>

    <EditText
        android:id="@+id/memberMail_activity_group_members"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:hint="@string/activity_group_member_mail"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="50"
        android:maxLines="1"
        android:nextFocusDown="@+id/pass_reg"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textCursorDrawable="@android:color/black"
        android:textSize="15dp"/>

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:id="@+id/tableLayoutSubmitButton_actitivty_group_member"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:stretchColumns="*"
        android:background="@android:color/white"
        android:layout_marginTop="12dp">


        <TableRow
            android:id="@+id/tableRowSubmitButton_actitivty_group_member"
            android:layout_height="40sp"
            android:layout_width="wrap_content"
            >

            <ImageButton
                android:id="@+id/buttonSubmit_activity_group_member"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:adjustViewBounds="true"
                android:background="@drawable/buttoncirculartransparent"
                android:scaleType="fitXY"
                android:src="@drawable/tick_icon256x256" />

        </TableRow>
    </TableLayout>
</LinearLayout>