<?xml version="1.0" encoding="utf-8"?>



<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/tableLayout_activity_group_members"
    android:padding="2dp"
    android:stretchColumns="*"
    android:background="@drawable/activity_group_top_background"
    android:focusable="false"
    android:layout_marginBottom="15dp">

    <TableRow android:id="@+id/tableRow_activity_group_members"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:id="@+id/groupImage_group_activity_members"
            android:src="@drawable/groups900x900pressed"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="3"
            android:padding="6dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:id="@+id/textGroup_activity_group_members"
            android:text="@string/activity_group_groupName"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="25sp"
            android:paddingTop="5sp"
            android:layout_weight="8"/>
    </TableRow>

</TableLayout>