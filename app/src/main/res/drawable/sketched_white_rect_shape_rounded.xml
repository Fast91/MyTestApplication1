<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape
            android:shape="rectangle"
            >

            <corners
                android:radius="@dimen/button_corner_radius_faust"
                />
            <solid
                android:color="@android:color/white"
                />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />

            <stroke
                android:width="0.5dp"
                android:color="@android:color/black"
                />

            <shadow
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />


        </shape>

    </item>
</selector>