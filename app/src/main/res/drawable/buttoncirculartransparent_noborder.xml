<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true"
   >

<shape
    android:shape="oval" >


    <corners
        android:radius="6dp"
        />
    <solid
        android:color="@android:color/transparent"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <stroke
        android:width="0dp"
        >

    </stroke>

    <shadow
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <size
        android:width="30dp"
        android:height="30dp"/>

</shape>

</item>

