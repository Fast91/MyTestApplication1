<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"
        >

        <shape
            android:shape="rectangle" >


            <corners
                android:radius="6dp"
                />
            <solid
                android:color="#EDF8ED"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="1.5dp"
                android:color="@color/BreakingMADLightGreen"
                />

            <shadow
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                />

        </shape>

    </item>

<item >

<shape
    android:shape="rectangle" >

