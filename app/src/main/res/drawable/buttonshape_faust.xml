<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true">

<shape
    android:shape="rectangle">


    <corners
        android:radius="@dimen/button_corner_radius_faust"
        />

    <gradient
        android:startColor="@color/BreakingMADLightGreen"
        android:centerColor="@color/BreakingMADDarkGreen"
        android:endColor="@color/BreakingMADLightGreen"
        android:angle="270" />

    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"
        />

    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray"
        />

    <shadow
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />


</shape>

</item>

