<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.faust.mytestapplication1.ActivityAddUserToGroup"
    android:orientation="vertical"
   >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal">


        <TextView

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textAlignment="textStart"
            android:gravity="start|center_vertical"
            android:text="@string/textview_addGroup"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:background="@color/BreakingMADLightGreen"
            android:layout_weight="1"

            />


        <Button
            android:id="@+id/buttonSubmit_activity_group"
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:background="@color/BreakingMADLightGreen"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/save_string"
            android:layout_weight="1"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameGroup_actitivty_expense"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextbackground"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="@string/activity_group_groupName"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1"
            android:nextFocusDown="@+id/pass_reg"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@null"
            android:cursorVisible="true"
            android:textSize="25sp"/>



            <ImageView
                android:id="@+id/imagePicture_activity_group"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/group_image314x250"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/edittextbackground"
                />


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/buttonPhoto_activity_group"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/buttoncirculartransparent_noborder"
                    android:scaleType="centerInside"

                    />

                <ImageButton
                    android:id="@+id/buttonGallery_activity_group"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:background="@drawable/buttoncirculartransparent_noborder"
                    android:scaleType="centerInside"
                    />

            </LinearLayout>




        </LinearLayout>








</LinearLayout>
