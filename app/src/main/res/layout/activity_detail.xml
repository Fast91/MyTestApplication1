<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_detail_scroll"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="0dp">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.faust.mytestapplication1.ActivityDetailActivity"
    android:id="@+id/linearLayout_activitydetail"
    android:padding="2dp"
    android:background="@android:color/white"
    android:orientation="vertical"

    >
    <!--android:weightSum="1"-->

    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:id="@+id/internal_linear_layout_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@drawable/title_expense_background"
        android:layout_gravity="center_vertical|center_horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/title_expense"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/activity_detail_title"
                android:paddingBottom="2dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textCursorDrawable="@android:color/black"
                android:textSize="25sp"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/imageDetailPicture"
                android:layout_width="60dp"
                android:maxWidth="60dp"
                android:layout_height="wrap_content"
                android:maxHeight="120dp"
                android:gravity="center"
                android:src="@drawable/telefono"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/sketched_white_rect_shape"
                />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>




    <TextView
        android:id="@+id/Group_expense"
        android:hint="Group XXX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:nextFocusDown="@+id/pass_reg"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/Date_expense"
        android:hint="Added on: 01/01/1970"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:layout_margin="2dp"
        android:textCursorDrawable="@android:color/black"
        android:textSize="20sp"
        android:nextFocusDown="@+id/pass_reg"
        android:maxLines="1"
        android:maxLength="50"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_expense_background_2"
        android:ems="10"
        android:textSize="30sp"
        android:id="@+id/Total_expense"
        android:hint="Amount: 100â‚¬"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_margin="2dp"
        android:textCursorDrawable="@android:color/black"
        android:nextFocusDown="@+id/pass_reg"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/Category_expense"
        android:hint="@string/activity_detail_category"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:layout_margin="2dp"
        android:textCursorDrawable="@android:color/black"
        android:textSize="15dp"
        android:nextFocusDown="@+id/pass_reg"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
    <TextView
        android:background="@drawable/sketched_transparent_rect_shape_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/Description_expense"
        android:hint="@string/activity_detail_description"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:layout_margin="2dp"
        android:textCursorDrawable="@android:color/black"
        android:nextFocusDown="@+id/pass_reg"
        android:maxLines="1"
        android:maxLength="50"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="1"
        />
        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="4dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/relativeLayoutDetailActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_detail_fragment"
            android:name="com.example.faust.mytestapplication1.DetailActivityListFragment">

        </FrameLayout>

    </RelativeLayout>
</LinearLayout>

</ScrollView>