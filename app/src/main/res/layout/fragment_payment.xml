<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.faust.mytestapplication1.PaymentActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="1">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="2dp"/>

    <TextView
        android:background="@drawable/title_expense_background"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:textAllCaps="true"
        android:paddingBottom="8dp"
        android:text="Payment"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You owe "/>
        <TextView
            android:textColor="@color/BreakingMADDarkGreen"
            android:textColorHint="@color/BreakingMADDarkGreen"
            android:textSize="15sp"
            android:id="@+id/you_have_to_pay_amount_payment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="XY"/>
        <TextView
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" to "/>
        <TextView
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="15sp"
            android:id="@+id/expense_owner_payment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Receiver Name"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.22"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay what you want."
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">
        <Button
            android:enabled="true"
            android:visibility="visible"
            android:id="@+id/default_amount_button_payment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/button_pressed_faust"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15sp"
            android:hint="XY"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:enabled="true"
                android:visibility="visible"
                android:id="@+id/custom_amount_button_payment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/buttonshape_faust"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:text="Custom Amount"/>
            <EditText
                android:enabled="false"
                android:visibility="invisible"
                android:id="@+id/custom_amount_edittext_payent_tv"
                android:layout_alignTop="@id/custom_amount_button_payment_tv"
                android:layout_alignBottom="@id/custom_amount_button_payment_tv"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="Custom Amount"
                android:background="@drawable/sketched_white_rect_shape_rounded"/>
        </RelativeLayout>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/sketched_transparent_rect_shape_green">

            <TextView
                android:id="@+id/detail_label_payment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/BreakingMADDarkGreen"
                android:textColorHint="@color/BreakingMADDarkGreen"
                android:textAlignment="textStart"
                android:paddingBottom="2dp"
                android:text="Payment detail:"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textAlignment="textStart"
                    android:text="Sender: "/>

                <TextView
                    android:id="@+id/sender_label_payment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textAlignment="textStart"
                    android:hint="Sender Name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textAlignment="textStart"
                    android:text="Receiver: "/>

                <TextView
                    android:id="@+id/receiver_label_payment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textAlignment="textStart"
                    android:hint="Receiver Name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textAlignment="textStart"
                    android:text="Group: "/>

                <TextView
                    android:id="@+id/group_label_payment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textAlignment="textStart"
                    android:hint="Group Name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textAlignment="textStart"
                    android:text="Amount: "/>

                <TextView
                    android:id="@+id/amount_label_payment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textAlignment="textStart"
                    android:hint="Total Amount"/>
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.16"/>
    <Button
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape_faust"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="Confirm"/>
</LinearLayout>