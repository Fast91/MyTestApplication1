<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.faust.mytestapplication1.ActivityInvitation">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_login_register"

        android:layout_margin="10sp"
        >

        <TextView
            android:id="@+id/invitation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:text="@string/invitationactivity_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/invitation_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:textSize="15sp"
            android:text="@string/invitationactivity_message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <EditText
            android:id="@+id/invitation_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:hint="@string/invitation_hintpin"
            android:textColorHint="@android:color/darker_gray"
            />


        <ImageButton style="@style/AppTheme"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:id="@+id/imageButtonInvitation"

            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:background="@drawable/buttoncircular"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>






</RelativeLayout>
