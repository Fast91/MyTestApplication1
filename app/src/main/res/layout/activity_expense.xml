<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_expense_land"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="2dp"

    android:weightSum="1">


    <TextView

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textAlignment="textStart"
        android:gravity="start|center_vertical"
        android:text="@string/textview_addExpense"
        android:paddingLeft="10dp"
        android:textStyle="bold"

        android:background="@color/BreakingMADLightGreen"

        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout_activityexpense"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="1">


        <EditText
            android:id="@+id/Title_newexpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/sketched_white_rect_shape_rounded"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="@string/newexpense_title"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1"
            android:nextFocusDown="@+id/pass_reg"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@android:color/black"
            android:textSize="30sp" />


        <Spinner
            android:id="@+id/Group_newexpense"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:maxLength="50"
            android:maxLines="1"
            android:nextFocusDown="@+id/pass_reg"
            android:popupBackground="#fff"

            android:prompt="@string/groupspinner_prompt"
            android:foreground="@drawable/sketched_transparent_rect_shape_rounded"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="#000"
            android:textCursorDrawable="@android:color/black"

            android:textSize="25sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="1">
            <EditText
                android:id="@+id/Total_newexpense"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.9"

                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/sketched_white_rect_shape_rounded"
                android:digits="0123456789."
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint="@string/newexpense_amount"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="50"
                android:maxLines="1"
                android:nextFocusDown="@+id/pass_reg"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@android:color/black"
                android:textSize="30sp"
                />
            <Spinner
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"

                android:layout_weight="0.1"
                android:id="@+id/new_expense_currency_spinner"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:maxLength="50"
                android:nextFocusDown="@+id/pass_reg"
                android:prompt="@string/currencyspinner_prompt"
                android:textAlignment="center"
                android:foreground="@drawable/sketched_transparent_rect_shape_rounded"
                android:textColor="@android:color/black"
                android:textColorHint="#000"
                android:textCursorDrawable="@android:color/black"

                android:textSize="30sp">
            </Spinner>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:id="@+id/Data_newexpense"
            android:hint="@string/newexpense_data"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/sketched_white_rect_shape_rounded"
            android:layout_margin="2dp"
            android:textCursorDrawable="@android:color/black"
            android:textSize="25sp"
            android:nextFocusDown="@+id/pass_reg"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:maxLength="50"
            android:focusableInTouchMode="true"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:id="@+id/Category_newexpense"
            android:hint="@string/newexpense_category"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="25sp"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:maxLength="50"
            android:maxLines="1"
            android:nextFocusDown="@+id/pass_reg"
            android:foreground="@drawable/sketched_transparent_rect_shape_rounded"
            android:layout_gravity="center"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/text_pagatoda_expense"
                android:text="@string/text_pagatoda_expense_string"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingEnd="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"/>

            <Button
                android:id="@+id/button_pagatoda_expense"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sketched_white_rect_shape_rounded"
                android:padding="1dp"
                android:paddingEnd="10dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/text_diviso_expense"
                android:text="@string/text_diviso_expense_string"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingEnd="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                />

            <Button
                android:id="@+id/button_diviso_expense"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sketched_white_rect_shape_rounded"
                android:text="@string/button_diviso_expense_string"/>


        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <ImageView
            android:id="@+id/imagePicture"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"

            android:padding="1dp"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/edittextimagebackground"/>

        <TableLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tableImage"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="2dp"
            android:stretchColumns="*"
            android:layout_marginTop="0dp">


            <TableRow
                android:id="@+id/tableRowImage"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center_horizontal|top"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/buttonPhoto"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/buttoncirculartransparent_noborder"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                    />

                <ImageButton
                    android:id="@+id/buttonGallery"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:background="@drawable/buttoncirculartransparent_noborder"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                   />

                <ImageButton
                    android:id="@+id/buttonDeleteImage"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="4dp"
                    android:background="@drawable/buttoncirculartransparent_noborder"
                    android:scaleType="centerInside"
                    />

                <ImageButton
                    android:id="@+id/buttonSubmitExpense"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/buttoncircularwhite"
                    android:scaleType="centerInside"

                    android:layout_gravity="end"
                    />




            </TableRow>
        </TableLayout>




    </LinearLayout>





    </ScrollView>