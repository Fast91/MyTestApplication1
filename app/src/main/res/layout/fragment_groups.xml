<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rectagle_white_background_with_border_bottom"
    >

    <ImageView
        android:id="@+id/image_groups_group"
        android:layout_width="50dp"
        android:layout_height="50sp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_margin="10dp"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:foregroundGravity="center"
        />

    <TextView
        android:id="@+id/name_groups_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/name_user_global_string"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_toRightOf="@+id/image_groups_group"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingLeft="30dp"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.60"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/todo_groups_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:layout_toRightOf="@+id/image_activity_group"
            android:text="@string/name_user_global_string"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/fragment_global_text_amount_size" />

        <TextView
            android:id="@+id/money_groups_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"

            android:layout_marginLeft="@dimen/fragment_global_image_margin"
            android:text="@string/total_user_global_string"
            android:textAppearance="?attr/textAppearanceListItem" />


    </LinearLayout>
</LinearLayout>
