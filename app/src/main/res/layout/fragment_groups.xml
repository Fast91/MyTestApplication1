<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_groups_group"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:src="@drawable/group"

        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:foregroundGravity="center"
        />

    <TextView
        android:id="@+id/name_groups_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/name_user_global_string"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_toRightOf="@+id/image_groups_group"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/money_groups_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/total_user_global_string"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_toRightOf="@+id/name_groups_group"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
