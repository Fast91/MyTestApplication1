<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
              android:gravity="center"
              android:weightSum="1"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.2">
        <ImageView
        android:id="@+id/image_user_group"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:src="@drawable/profilecircle"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_gravity="center"

        />
    </LinearLayout>

    <TextView
        android:id="@+id/name_user_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/name_user_global_string"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/money_user_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/total_user_global_string"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/fragment_user_group_item_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Pay"
        android:textColor="@android:color/white"
        android:background="@drawable/button_pressed_faust"
        />

</LinearLayout>
