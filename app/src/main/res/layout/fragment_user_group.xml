<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
              android:gravity="center"
              android:weightSum="1"
    android:background="@drawable/rectagle_white_background_with_border_bottom"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_user_group"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:textAppearance="?attr/textAppearanceListItem"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/name_user_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/name_user_global_string"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.60"
        android:orientation="vertical"

        android:gravity="center"

        >

        <TextView
            android:id="@+id/todo_user_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/image_activity_group"
            android:text="@string/name_user_global_string"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/fragment_global_text_amount_size" />

        <TextView
            android:id="@+id/money_user_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"

            android:layout_marginLeft="@dimen/fragment_global_image_margin"
            android:text="@string/total_user_global_string"
            android:textAppearance="?attr/textAppearanceListItem" />


    </LinearLayout>



    <Button
        android:id="@+id/fragment_user_group_item_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"

        android:layout_marginRight="5dp"

        android:text="@string/pay"
        android:textColor="@android:color/white"
        android:background="@drawable/button_pressed_faust"
        />

</LinearLayout>
