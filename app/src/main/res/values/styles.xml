<resources>

    <!-- Base application theme. -->
    <!--style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"-->

    <!-- Customize your theme here. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">


        <item name="colorPrimary">#81c784</item>
        <item name="colorPrimaryDark">#4caf50</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Customize your theme here. -->


    </style>


    <style xmlns:android="http://schemas.android.com/apk/res/android" name="textButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="splashscreen"  parent="Theme.AppCompat.Light"
        >

        <item name="colorPrimary">#4caf50</item>
        <item name="colorPrimaryDark">#81c784</item>
        <item name="android:colorBackground">#81c784</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="splashscreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="splashscreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="splashscreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
